<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.avon.spott">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".AddPhotoActivity"></activity>
        <activity android:name=".EditPWActivity"></activity>
        <activity android:name=".EditNicknameActivity"></activity>
        <activity android:name=".CameraActivity"></activity>
        <activity android:name=".EditMyInfoActivity"></activity>
        <activity android:name=".EmailLoginActivity"></activity>
        <activity android:name=".FindPWActivity"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".NicknameActivity"></activity>
        <activity android:name=".NumberActivity"></activity>
        <activity android:name=".SignupActivity"></activity>
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_geo_key"/>

    </application>

</manifest>