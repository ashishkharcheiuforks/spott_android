<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.avon.spott.Search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >

        <action
            android:id="@+id/action_searchFragment_to_hashtagFragment"
            app:destination="@id/hashtagFragment" />
    </fragment>

    <fragment
        android:id="@+id/hashtagFragment"
        android:name="com.avon.spott.Hashtag.HashtagFragment"
        android:label ="fragment_hashtag"
        tools:layout="@layout/fragment_user">
        <action
            android:id="@+id/action_hashtagFragment_to_photo"
            app:destination="@id/photo" />
    </fragment>


    <include app:graph="@navigation/photo" />
</navigation>