<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/include_toolbar_emaillogin_a"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edit_username_emailogin_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/corner_round_whitetext"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:ems="10"
        android:hint=" Username"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_toolbar_emaillogin_a"/>

    <EditText
        android:id="@+id/edit_password_emailogin_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/corner_round_whitetext"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@id/edit_username_emailogin_a"
        app:layout_constraintStart_toStartOf="@id/edit_username_emailogin_a"
        app:layout_constraintTop_toBottomOf="@+id/edit_username_emailogin_a"/>

    <TextView
        android:id="@+id/text_findpw_emailogin_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/findpw"
        android:textColor="#5B9DC9"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_password_emailogin_a"
        app:layout_constraintTop_toBottomOf="@+id/edit_password_emailogin_a"/>

    <Button
        android:id="@+id/btn_login_emailogin_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:background="@drawable/corner_round_graybtn"
        android:text="@string/check"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#F4F1FA"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/edit_username_emailogin_a"
        app:layout_constraintStart_toStartOf="@id/edit_username_emailogin_a"
        app:layout_constraintTop_toBottomOf="@+id/edit_password_emailogin_a"/>

</androidx.constraintlayout.widget.ConstraintLayout>