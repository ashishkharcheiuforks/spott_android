<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPWActivity">

    <TextView
        android:id="@+id/text_title_findpw_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_back_findpw_a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_back_findpw_a" />

    <EditText
        android:id="@+id/edit_email_findpw_a"
        style="@style/side_margine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/corner_round_whitetext"
        android:hint="이메일"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_findpw_a" />

    <TextView
        android:id="@+id/text_warnmsg_findpw_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="이메일 형식을 확인해주세요"
        android:textColor="#EB685B"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/edit_email_findpw_a"
        app:layout_constraintTop_toBottomOf="@+id/edit_email_findpw_a" />

    <Button

        android:id="@+id/btn_confirm_findpw_a"
        style="@style/side_margine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/corner_round_graybtn"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_email_findpw_a" />

    <ImageView

        style="@style/arrow_left"
        android:id="@+id/imgbtn_back_findpw_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>