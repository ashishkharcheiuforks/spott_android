<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"

        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"

        app:contentInsetStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/img_back_toolbar"
            android:layout_width="35dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/img_profile_toolbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="8dp"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/text_name_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:visibility="gone"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="16dp"
            tools:text="NickName"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/text_title_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="206dp"
            tools:layout_editor_absoluteY="16dp"
            tools:text="title" />


        <ImageView
            android:id="@+id/img_more_toolbar"
            android:layout_width="28dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_more_horiz_black_24dp"
            tools:ignore="VectorDrawableCompat"
            tools:layout_editor_absoluteX="376dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/img_menu_toolbar"
            android:layout_width="28dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_menu_black_24dp"
            tools:ignore="VectorDrawableCompat"
            tools:layout_editor_absoluteX="376dp"
            tools:visibility="visible" />


        <ImageView
            android:id="@+id/img_noti_toolbar"
            android:layout_width="26dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_notifications_black_24dp"
            tools:ignore="VectorDrawableCompat"
            tools:layout_editor_absoluteX="341dp"
            tools:visibility="visible" />

    </androidx.appcompat.widget.Toolbar>


</androidx.constraintlayout.widget.ConstraintLayout>