<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- baseline_keyboard_arrow_left_24 / 뒤로가기 -->
    <style name="arrow_left" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/default_background</item>
        <item name="android:src">@drawable/baseline_keyboard_arrow_left_24</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">36dp</item>
    </style>

    <!-- text_title -->
    <style name="text_title" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/default_background</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- blank / 공백 -->
    <style name="blank">
        <item name="android:minHeight">30dp</item>
        <item name="android:background">#E0E0E0</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>


</resources>
