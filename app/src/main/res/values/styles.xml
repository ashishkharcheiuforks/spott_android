<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- baseline_keyboard_arrow_left_24 / 뒤로가기 -->
    <style name="arrow_left" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/default_background</item>
        <item name="android:src">@drawable/baseline_keyboard_arrow_left_24</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">36dp</item>
    </style>

    <!-- text_title -->
    <style name="text_title" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/default_background</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- blank / 공백 -->
    <style name="blank">
        <item name="android:minHeight">30dp</item>
        <item name="android:background">#E0E0E0</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!--  상태바 없애기  -->
    <style name="NoStatusbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Ad</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>


    <style name="SplashTheme"  parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>



</resources>
